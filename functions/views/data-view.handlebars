<br clear="left"/>
<h2>Order Books by Rate</h2>

<table width="50%" class="rateTable">
    <thead>
    <tr>
        <td colspan="3">Asks</td>
    </tr>
    <tr>
        <th>Exchange</th>
        <th>Rate</th>
        <th>Qty</th>
    </tr>
    </thead>
    {{#each data.asks}}
    <tr>
        <td>{{exchg}}</td>
        <td>{{rate}}</td>
        <td>{{qty}}</td>
    </tr>
    {{/each}}
</table>
<table width="50%" class="rateTable">
    <thead>
    <tr>
        <td colspan="3">Bids</td>
    </tr>
    <tr>
        <th>Exchange</th>
        <th>Rate</th>
        <th>Qty</th>
    </tr>
    </thead>
    {{#each data.bids}}
    <tr>
        <td>{{exchg}}</td>
        <td>{{rate}}</td>
        <td>{{qty}}</td>
    </tr>
    {{/each}}
</table>

